{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "baseBranches": ["main"],
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "matchBaseBranches": ["main"],
      "enabled": false
    },
    {
      "matchUpdateTypes": ["minor","patch"],
      "matchBaseBranches": ["main"],
      "automerge": true
    }
  ]
}
