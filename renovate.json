{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "baseBranchPatterns": [
    "main"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "major"
      ],
      "matchBaseBranches": [
        "main"
      ],
      "enabled": false
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchBaseBranches": [
        "main"
      ],
      "automerge": true,
      "ignoreTests": true
    },
    {
      "versioning": "regex:^RELEASE\\.(?<major>\\d{4})-(?<minor>\\d{2})-(?<patch>\\d{2}).+Z$",
      "matchPackageNames": [
        "/^minio/"
      ]
    },
    {
      "matchFileNames": [
        "docker/compose/mysql8/docker-compose.yml"
      ],
      "versioning": "regex:^8\\.0\\.(?<patch>\\d{1,2})-oraclelinux\\d+?$"
    }
  ]
}
